<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="5dp">

    <TextView
        android:id="@+id/tvCaption"
        android:layout_width="214dp"
        android:layout_height="34dp"
        android:text="TextView"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/chPeriod" />

    <TextView
        android:id="@+id/tvUsername"
        android:layout_width="70dp"
        android:layout_height="29dp"
        android:layout_marginStart="108dp"
        android:text="TextView"
        app:layout_constraintStart_toEndOf="@+id/tvCaption"
        tools:layout_editor_absoluteY="1dp" />

    <com.google.android.material.chip.Chip
        android:id="@+id/chPeriod"
        android:layout_width="108dp"
        android:layout_height="37dp"
        app:layout_constraintEnd_toStartOf="@+id/chActivity"
        tools:layout_editor_absoluteY="35dp" />

    <com.google.android.material.chip.Chip
        android:id="@+id/chActivity"
        android:layout_width="108dp"
        android:layout_height="37dp"
        app:layout_constraintEnd_toStartOf="@+id/chBreak"
        tools:layout_editor_absoluteY="35dp" />

    <com.google.android.material.chip.Chip
        android:id="@+id/chBreak"
        android:layout_width="108dp"
        android:layout_height="37dp"
        tools:layout_editor_absoluteX="216dp"
        tools:layout_editor_absoluteY="35dp" />


</androidx.constraintlayout.widget.ConstraintLayout>